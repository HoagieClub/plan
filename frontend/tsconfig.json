{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // TODO: Change all relevant import paths to @ for better readability and maintainability
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@store/*": ["store/*"],
      "@app/*": ["app/*"],
      "@hooks/*": ["app/hooks/*"],
      "@utilities/*": ["app/utilities/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "components/DndContextProvider.tsx", "app/plswork/page.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
